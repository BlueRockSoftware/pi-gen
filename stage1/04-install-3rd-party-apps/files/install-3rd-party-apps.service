[Unit]
Description=Install 3rd Party Applications Service
After=network-online.target
Wants=network-online.target

[Service]
ExecStartPre=/usr/bin/bash -c 'while ! ping -c 1 github.com > /dev/null 2>&1; do sleep 5; echo "Waiting for github.com..."; done'
ExecStart=/usr/local/sbin/install-3rd-party-apps

[Install]
WantedBy=multi-user.target
